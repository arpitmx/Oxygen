<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/darkbg_main"
    tools:context=".UI.Assigned.AssignedFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/assigned_workspace"
        android:orientation="vertical"
        android:paddingTop="25dp"
        android:paddingBottom="65dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="2"
        >

        <LinearLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/assigned"
            android:background="@drawable/stats_border"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingTop="45dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="15dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/assigned_icon"
                android:layout_marginTop="50dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/baseline_active_24"
                app:tint="@color/better_white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/better_white"
                android:text="Assigned"
                android:textSize="24dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:layout_marginStart="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary"
                android:text="4 tasks"
                android:id="@+id/assigned_count"
                android:layout_marginTop="2dp"
                android:textSize="20dp"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:layout_marginStart="8dp"/>


        </LinearLayout>


        <LinearLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/working"
            android:background="@drawable/stats_border"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingTop="45dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            >

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/working_icon"
                android:layout_marginTop="50dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/baseline_ongoing_24"
                app:tint="@color/better_white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/better_white"
                android:text="Working"
                android:textSize="24dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:layout_marginStart="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary"
                android:text="4 tasks"
                android:id="@+id/working_count"
                android:layout_marginTop="2dp"
                android:textSize="20dp"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:layout_marginStart="8dp"/>


        </LinearLayout>
        <LinearLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/review"
            android:background="@drawable/stats_border"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingTop="45dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="15dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/review_icon"
                android:layout_marginTop="50dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/baseline_review_24"
                app:tint="@color/better_white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/better_white"
                android:text="Reviewing"
                android:textSize="24dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:layout_marginStart="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary"
                android:text="4 tasks"
                android:id="@+id/review_count"
                android:layout_marginTop="2dp"
                android:textSize="20dp"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:layout_marginStart="8dp"/>


        </LinearLayout>


        <LinearLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/completed"
            android:background="@drawable/stats_border"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingTop="45dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/completed_icon"
                android:layout_marginTop="50dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/round_task_alt_24"
                app:tint="@color/better_white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/better_white"
                android:text="Completed"
                android:textSize="24dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:layout_marginStart="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary"
                android:text="4 tasks"
                android:id="@+id/completed_count"
                android:layout_marginTop="2dp"
                android:textSize="20dp"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:layout_marginStart="8dp"/>


        </LinearLayout>
    </GridLayout>
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
