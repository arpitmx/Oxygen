<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:minHeight="200dp"
    android:background="@color/secondary_bg_black"
    android:paddingBottom="30dp"
    >


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/purple"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="10"
        >

        <ImageButton
            android:id="@+id/close_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:src="@drawable/baseline_keyboard_arrow_down_24"
            app:tint="@color/dim_primary" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:fontFamily="@font/sf_pro_display_semibold"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Set Duration"
            android:textColor="@color/better_white"
            android:textSize="18dp" />


        <ImageButton
            android:id="@+id/done_btn"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:src="@drawable/done"
            app:tint="@color/dim_primary" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/card_bg"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/project_link"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/item_bg_curve"
        android:paddingStart="15dp"
        android:paddingBottom="1dp"
        android:inputType="numberDecimal"
        android:gravity="start|center_vertical"
        android:hint="Provide Duration"
        android:textAllCaps="false"
        android:textColorHint="@color/account"
        android:drawablePadding="15dp"
        android:fontFamily="@font/sf_pro_display_medium"
        android:transitionName="searchActivityTransition"
        android:textSize="18dp"
        android:textColor="#DEE3E3E3"
        />

    <RadioGroup
        android:id="@+id/mcqGroup"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:paddingStart="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingEnd="10dp"

        >
        <RadioButton
            android:id="@+id/hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:maxLines="3"
            android:padding="10dp"
            android:text="Hours"
            android:textSize="18dp"
            android:background="@drawable/item_bg_curve"
            android:fontFamily="@font/sf_pro_display_semibold"
            android:textColor="@color/account"
            android:buttonTint="@color/dim_primary"
            android:paddingStart="10dp"
            />

        <RadioButton
            android:id="@+id/dsy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:maxLines="3"
            android:padding="10dp"
            android:text="Days"
            android:textSize="18dp"
            android:fontFamily="@font/sf_pro_display_semibold"
            android:background="@drawable/item_bg_curve"
            android:textColor="@color/account"
            android:buttonTint="@color/dim_primary"
            android:paddingStart="10dp"
            />
        <RadioButton
            android:id="@+id/week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:maxLines="3"
            android:padding="10dp"
            android:text="Weeks"
            android:textSize="18dp"
            android:background="@drawable/item_bg_curve"
            android:textColor="@color/account"
            android:buttonTint="@color/dim_primary"
            android:paddingStart="10dp"
            />
        <RadioButton
            android:id="@+id/option4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_bg_curve"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:maxLines="3"
            android:padding="10dp"
            android:text="Months"
            android:textSize="18dp"
            android:fontFamily="@font/sf_pro_display_semibold"
            android:textColor="@color/account"
            android:buttonTint="@color/dim_primary"
            android:paddingStart="10dp"
            />
    </RadioGroup>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar"
        android:visibility="gone"
        android:indeterminateTint="@color/purple"/>

