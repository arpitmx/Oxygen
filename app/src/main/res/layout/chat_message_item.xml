<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darkbg_main_a80"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:weightSum="10">


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="10dp"
        android:background="@color/border_grey"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_dp"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:fontFamily="@font/sfbold"
            android:gravity="center"
            android:src="@color/s3bg"
            android:textColor="@color/darkTheme_bg"
             />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/difficulty"
            android:fontFamily="@font/sf_pro_display_medium"
            android:gravity="center"
            android:paddingTop="1dp"
            android:text="Username"
            android:textColor="@color/primary"
            android:textSize="15dp"
            app:layout_constraintTop_toTopOf="parent" />



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_timestamp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/sf_pro_display_regular"
            android:text="5 months ago"
            android:gravity="end|center_vertical"
            android:textColor="@color/account"
            android:textSize="@dimen/chat_msg_text_size"

            />

    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="@dimen/chat_margin"
        android:orientation="vertical"
        >
        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_top_task_detail"
            android:elevation="3dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/primary"
            android:visibility="visible"
            />
        <br.tiagohm.markdownview.MarkdownView
            android:id="@+id/markdown_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="true"
            android:visibility="gone"
            app:escapeHtml="false"
            android:nestedScrollingEnabled="true"
            android:visibility="gone"
            android:textSize="15dp"
            app:escapeHtml="false"
            android:fontFamily="@font/sf_pro_display_medium"
            android:text="*This is a test message*, I wanted to talk about yesterday's match, but let's see what the heck is going on..."
            android:textColor="@color/better_white"
            android:textSize="16dp"
            android:textAlignment="textStart"
            />
            android:textAlignment="textStart"/>

        <TextView
            android:id="@+id/btn_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copy"
            android:textSize="12dp"
            android:background="@drawable/curvedbggraybg_umssg"
            android:layout_gravity="end"
            android:padding="5dp"
            android:visibility="gone"
            android:src="@drawable/document_normal"
            android:tint="@color/card_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>

