<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="125dp"
    android:id="@+id/stat_parent"
    android:background="@drawable/primary_layer_top"
    android:orientation="vertical"
    android:layout_marginStart="5dp"
    android:paddingStart="8dp"
    android:foreground="@drawable/ripplecustom"
    android:clickable="true"
    android:focusable="true"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/stat_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/baseline_active_24"
        app:tint="@color/better_white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/better_white"
        android:text="Active"
        android:textSize="17dp"
        android:id="@+id/stat_title"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/sf_pro_display_medium"
        android:layout_marginStart="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primary"
        android:text="4 tasks"
        android:textSize="16dp"
        android:id="@+id/stat_count"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/sf_pro_display_regular"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        />


</LinearLayout>