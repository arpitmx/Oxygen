<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.O2" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/darkbg_main</item>
        <item name="android:navigationBarColor">@color/darkbg_main</item>
    </style>

    <style name="Theme.O2" parent="Base.Theme.O2" />

    <style name="O2SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#000000</item>
        <item name="android:statusBarColor">#000000</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="textAllCaps">true</item>
    </style>

</resources>