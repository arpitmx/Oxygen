<resources>


    <style name="editor_options" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/card_view_white</item>
        <item name="android:textColor">@color/primary_bg</item>
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="chatbox_options" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/card_view_chatbox_options</item>
        <item name="android:drawableTint">@color/colorAccent</item>
        <item name="android:textColor">@color/primary_bg</item>
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>

    </style>


    <style name="body_regular">
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/sfregular</item>

    </style>

    <style name="body_bold">
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>

    </style>

    <style name="headline_regular">
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/sfregular</item>

    </style>

    <style name="headline_bold">
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/sfbold</item>

    </style>

    <style name="footnote_bo">
        <item name="android:textSize">13sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/sfbold</item>
    </style>

    <style name="Widget.Theme.O2.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.O2.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>


    <style name="LabelStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textColor">@color/better_white</item>
    </style>

    <style name="LabelStyleTaskTab">
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">start|bottom</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textColor">@color/account</item>


    </style>

    <style name="SolidButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/solid_bg</item>
        <item name="android:textColor">@color/primary_bg</item>
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="StrokeButtonStyle" parent="SolidButtonStyle">
        <item name="android:background">@drawable/stroke_bg</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/edit_text_bg</item>
        <item name="android:textColor">@color/edit_text_txt</item>
        <item name="android:textColorHint">@color/edit_text_hint</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>


</resources>