<!-- res/anim/blink_animation.xml -->
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <alpha
        android:fromAlpha="1.0"
        android:toAlpha="0"
        android:duration="1000"
        android:repeatCount="infinite"

        />

    <alpha
        android:fromAlpha="0"
        android:toAlpha="1.0"
        android:duration="1000"
        android:repeatCount="infinite"

        />

</set>
